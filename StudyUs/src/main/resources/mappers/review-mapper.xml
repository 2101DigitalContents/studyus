<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="reviewMapper">
		<resultMap type="Review" id="replyResultMap">
		<id property="rvNo" column="RV_NO" />
		<result property="caNo" column="CA_NO" />
		<result property="mbId" column="MB_ID" />
		<result property="rvContents" column="RV_CONTENTS" />
		<result property="rvRating" column="RV_RATING" />
		<result property="rvDate" column="RV_DATE" />
		<result property="rvStatus" column="RV_STATUS" />
	</resultMap>

	<select id="selectReviewList" resultMap="replyResultMap">
		SELECT * FROM REVIEW
		WHERE CA_NO = #{caNo} AND RV_STATUS = 'Y'
		ORDER BY RV_NO DESC
	</select>
	<insert id="insertReview" useGeneratedKeys="true"  keyProperty="rvNo" keyColumn="RV_NO">
		INSERT INTO REVIEW
		VALUES(SEQ_RVNO.NEXTVAL,
		#{caNo},#{mbId},#{rvContents},#{rvContents},#{rvRating},DEFAULT,DEFAULT)
	</insert>
	<update id="updateReview">
		UPDATE REVIEW
		SET RV_CONTENTS = #{rvContents}
		WHERE CA_NO = #{caNo} AND RV_NO = #{rvNo} AND RV_STATUS = 'Y'
	</update>
	<update id="deleteReply">
		UPDATE REVIEW SET RV_STATUS = 'N'
		WHERE CA_NO = #{caNo} AND RV_NO = #{rvNo}
	</update>
	
</mapper> 
 